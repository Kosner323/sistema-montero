    <script>
      document.addEventListener('DOMContentLoaded', function() {

        // --- Cargar Datos del Dashboard ---
        function loadDashboardData() {
          try { // AÃ±adir try-catch para errores al parsear localStorage
              const caseData = JSON.parse(localStorage.getItem('caseDataStore')) || [];
              const userData = JSON.parse(localStorage.getItem('userDataStore')) || [];
              const companyData = JSON.parse(localStorage.getItem('companyDataStore')) || [];
              // Intentar obtener formularios de localStorage (puede que no exista o estÃ© vacÃ­o)
              let formData = [];
              try {
                  formData = JSON.parse(localStorage.getItem('formulariosImportadosStore')) || [];
              } catch (e) { console.warn("No se pudieron cargar los formularios importados desde localStorage.")}


              const totalUsuariosCount = document.getElementById('totalUsuariosCount');
              if (totalUsuariosCount) totalUsuariosCount.textContent = userData.length;

              const totalNovedadesCount = document.getElementById('totalNovedadesCount');
              if (totalNovedadesCount) totalNovedadesCount.textContent = caseData.length;

              const totalEmpresasCount = document.getElementById('totalEmpresasCount');
              if (totalEmpresasCount) totalEmpresasCount.textContent = companyData.length;

              const totalFormulariosCount = document.getElementById('totalFormulariosCount');
              // Asegurarse de que formData sea un array antes de contar
              if (totalFormulariosCount) totalFormulariosCount.textContent = Array.isArray(formData) ? formData.length : 0;


              const recentActivityTbody = document.getElementById('recentActivityTbody');
              if (recentActivityTbody) {
                recentActivityTbody.innerHTML = '';
                const recentCases = caseData.sort((a, b) => {
                  const dateA = a.updateDate ? new Date(a.updateDate) : new Date(0);
                  const dateB = b.updateDate ? new Date(b.updateDate) : new Date(0);
                  return dateB - dateA;
                }).slice(0, 5);

                if (recentCases.length === 0) {
                  recentActivityTbody.innerHTML = '<tr><td colspan="5" class="text-center text-muted">No hay actividad reciente.</td></tr>';
                } else {
                  recentCases.forEach(caseItem => {
                    let statusBadgeClass = 'bg-secondary';
                    switch(caseItem.status?.toLowerCase()) {
                      case 'nuevo': statusBadgeClass = 'bg-light-primary text-primary'; break;
                      case 'en progreso': statusBadgeClass = 'bg-light-info text-info'; break;
                      case 'pendiente': statusBadgeClass = 'bg-light-warning text-warning'; break;
                      case 'resuelto': statusBadgeClass = 'bg-light-success text-success'; break;
                    }

                    let priorityText = caseItem.priorityText || caseItem.priority || 'N/A';
                    let priorityBadgeClass = 'bg-secondary text-white';
                    switch(caseItem.priority?.toLowerCase()) {
                      case 'critica': priorityBadgeClass = 'bg-danger text-white'; priorityText = 'CrÃ­tica'; break;
                      case 'alta': priorityBadgeClass = 'bg-warning text-dark'; priorityText = 'Alta'; break;
                      case 'media': priorityBadgeClass = 'bg-info text-white'; priorityText = 'Media'; break;
                      case 'baja': priorityBadgeClass = 'bg-light text-dark'; priorityText = 'Baja'; break;
                    }
                    if(caseItem.status?.toLowerCase() === 'resuelto') {
                      priorityText = 'Resuelto';
                      priorityBadgeClass = 'bg-success text-white';
                    }

                    const row = `
                      <tr>
                        <td><a href="novedades.html?caseId=${caseItem.caseId || ''}" class="text-primary-500">#${caseItem.caseId || 'N/A'}</a></td>
                        <td>${caseItem.client || 'N/A'}</td>
                        <td>${caseItem.subject || 'N/A'}</td>
                        <td><span class="badge ${statusBadgeClass}">${caseItem.status || 'N/A'}</span></td>
                        <td><span class="badge ${priorityBadgeClass}">${priorityText}</span></td>
                      </tr>
                    `;
                    recentActivityTbody.insertAdjacentHTML('beforeend', row);
                  });
                }
              }
          } catch(e) {
              console.error("Error al cargar datos del dashboard desde localStorage:", e);
              // PodrÃ­as mostrar un mensaje al usuario aquÃ­ si falla la carga de datos
          }
        }

        // --- LÃ³gica de Logout ---
        async function handleLogout() {
          try {
            console.log('ðŸšª Intentando logout...');
            const response = await fetch('/api/logout', { // URL Relativa
              method: 'POST',
              headers: { 'Accept': 'application/json' },
              credentials: 'include' // Enviar cookies
            });

            console.log('ðŸ“¡ Respuesta logout:', response.status);
            const result = await response.json();
            console.log('ðŸ“¦ Resultado logout:', result);

            if(response.ok) {
              console.log('âœ… Logout exitoso');
              sessionStorage.removeItem('userName'); // Limpiar nombre guardado
              window.location.href = '/login'; // Redirigir al login
            } else {
              console.error('âŒ Error al hacer logout:', result.error);
              alert('Error al cerrar sesiÃ³n: ' + (result.error || 'Error desconocido'));
              // Forzar redirecciÃ³n si falla el logout en el servidor pero queremos salir
              sessionStorage.removeItem('userName');
              window.location.href = '/login';
            }
          } catch (error) {
            console.error('âŒ Error de red al hacer logout:', error);
            alert('Error de conexiÃ³n al cerrar sesiÃ³n.');
             sessionStorage.removeItem('userName');
            window.location.href = '/login'; // Forzar redirecciÃ³n
          }
        }

        // Asignar evento a los botones de logout
        const logoutButton1 = document.getElementById('logoutButton');
        const logoutButton2 = document.getElementById('logoutButton2');
        if(logoutButton1) logoutButton1.addEventListener('click', handleLogout);
        if(logoutButton2) logoutButton2.addEventListener('click', handleLogout);

        // --- Carga inicial de datos del dashboard ---
        // Se ejecuta DESPUÃ‰S de que el script de verificaciÃ³n confirma autenticaciÃ³n
        loadDashboardData();

        // --- Mostrar Nombre de Usuario (leÃ­do desde sessionStorage) ---
        const storedUserName = sessionStorage.getItem('userName');
        const userNameDisplay = document.getElementById('userNameDisplay');
        if (userNameDisplay && storedUserName) {
          userNameDisplay.textContent = storedUserName;
        }

        // Re-inicializar Feather Icons despuÃ©s de cargar contenido dinÃ¡mico si es necesario
        feather.replace();

      });
    </script>

