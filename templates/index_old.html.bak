    <script>
      (async function checkAuthentication() {
        const loader = document.querySelector('.loader-bg');
        if (loader) loader.style.display = 'flex'; // Mostrar loader

        try {
          console.log('ðŸ” Verificando autenticaciÃ³n (con pausa)...');

          // â­ PAUSA DE 100 MILISEGUNDOS â­
          await new Promise(resolve => setTimeout(resolve, 100));
          // â­ FIN PAUSA â­

          const response = await fetch('/api/check_auth', { // URL Relativa
            method: 'GET',
            headers: { 'Accept': 'application/json' },
            credentials: 'include' // IMPORTANTE para cookies
          });

          console.log('ðŸ“¡ Respuesta check_auth:', response.status);

          if (!response.ok) { // Si hay error de servidor (ej. 500)
            console.error('âŒ Error del servidor:', response.status, response.statusText);
            window.location.href = '/login'; // Redirigir por seguridad
            return;
          }

          const data = await response.json();
          console.log('ðŸ“¦ Datos check_auth:', data);

          if (!data.authenticated) { // Si el servidor dice que no estÃ¡ autenticado
            console.log('ðŸš« Usuario no autenticado, redirigiendo...');
            window.location.href = '/login';
          } else { // Si estÃ¡ autenticado
            console.log('âœ… Usuario autenticado:', data.user_name);
            if (loader) loader.style.display = 'none'; // Ocultar loader
            sessionStorage.setItem('userName', data.user_name); // Guardar nombre para usarlo despuÃ©s

            // Intentar actualizar el nombre de usuario si el elemento ya existe
            // Es posible que necesite ejecutarse despuÃ©s de que el DOM estÃ© completamente cargado
            // si el elemento 'userNameDisplay' no estÃ¡ disponible de inmediato.
            const userNameDisplay = document.getElementById('userNameDisplay');
             if (userNameDisplay) {
                  userNameDisplay.textContent = data.user_name;
             } else {
                 // Si el elemento no existe aÃºn, esperar a que el DOM cargue
                 document.addEventListener('DOMContentLoaded', () => {
                     const userNameDisplayLate = document.getElementById('userNameDisplay');
                     if(userNameDisplayLate) userNameDisplayLate.textContent = data.user_name;
                 });
             }
          }
        } catch (error) { // Si hay error de red
          console.error('âŒ Error de red en check_auth:', error);
          window.location.href = '/login'; // Redirigir por seguridad
        }
        // No ocultar el loader aquÃ­ explÃ­citamente, ya se oculta si la auth es exitosa
      })();
    </script>
