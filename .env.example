# =====================================================================
# ARCHIVO .ENV.EXAMPLE - SISTEMA MONTERO
# =====================================================================
# Copia este archivo a .env y configura tus valores reales
# =====================================================================

# --- Claves de Seguridad ---
SECRET_KEY=tu_secret_key_aqui_min_32_caracteres
ENCRYPTION_KEY=tu_encryption_key_aqui

# --- Configuración de Flask ---
FLASK_ENV=development
FLASK_DEBUG=True

# --- Base de Datos ---
DATABASE_PATH=./data/mi_sistema.db

# --- Logging ---
LOG_LEVEL=INFO

# --- Email (SMTP) ---
# Para Gmail: Usa una "Contraseña de aplicación" (App Password)
# 1. Activa verificación en 2 pasos: https://myaccount.google.com/security
# 2. Genera contraseña de app: https://myaccount.google.com/apppasswords

# Configuración para Gmail
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_de_aplicacion_aqui
MAIL_DEFAULT_SENDER=Sistema Montero <tu_email@gmail.com>

# Configuraciones adicionales de Email
MAIL_MAX_EMAILS=None
MAIL_ASCII_ATTACHMENTS=False

